<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_show_picture"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.chenjinghao.commonutils.ShowPictureActivity">

    <ImageView
        android:id="@+id/iv_show_picture"
        android:layout_width="wrap_content"
        android:layout_height="300dp" />
    <Button
        android:id="@+id/btn_choose_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="choosePic"/>
    <Button
        android:id="@+id/btn_change_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="changeOption"/>
    <Button
        android:id="@+id/btn_change_rgb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="changeRgb"/>
    <Button
        android:id="@+id/btn_part_lode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="partLode"/>
    <Button
        android:id="@+id/btn_move_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="movePic"/>

</LinearLayout>
